@model BorrowITEquip.Models.EquipmentRequest

<div class="container py-4">
    <h1 class="display-6 mb-3">Request Submitted</h1>

    <div class="alert alert-success">
        Thank you, @Model.Name! Your request has been submitted.
        Someone from IT will be in touch soon.
    </div>

    <dl class="row">
        <dt class="col-sm-3">Request ID</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">Equipment</dt>
        <dd class="col-sm-9">@Model.EquipmentType</dd>

        <dt class="col-sm-3">Role</dt>
        <dd class="col-sm-9">@Model.Role</dd>

        <dt class="col-sm-3">Duration (days)</dt>
        <dd class="col-sm-9">@Model.Duration</dd>
    </dl>

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
</div>
