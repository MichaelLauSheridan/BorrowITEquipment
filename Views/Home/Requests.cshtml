@model IEnumerable<BorrowITEquip.Models.ViewModels.RequestRowVm>
@using BorrowITEquip.Models

<div class="container py-4">
    <h1 class="display-6 mb-3">Requests (Admin)</h1>

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Equipment</th>
                <th>Name</th>
                <th>Role</th>
                <th>Duration</th>
                <th>Status</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="6" class="text-center text-muted py-4">No requests yet.</td></tr>
        }
        else
        {
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Equipment</td>
                    <td>@r.Name</td>
                    <td>@r.Role</td>
                    <td>@r.DurationDays days</td>
                    <td>
                        <span class="badge @(r.Status == RequestStatus.Pending ? "bg-warning" : r.Status == RequestStatus.Accepted ? "bg-success" : "bg-danger")">
                            @r.Status
                        </span>
                    </td>
                    <td class="text-end">
                        <form method="post" action="/Requests/@r.Id/accept" class="d-inline">
                            <button type="submit" class="btn btn-success btn-sm me-2">Accept</button>
                        </form>
                        <form method="post" action="/Requests/@r.Id/deny" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm">Deny</button>
                        </form>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>
