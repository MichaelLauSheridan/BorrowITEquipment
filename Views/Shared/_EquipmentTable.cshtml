@model IEnumerable<BorrowITEquip.Models.Equipment>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Type</th>
            <th>Description</th>
            <th class="text-center">Availability</th>
        </tr>
    </thead>
    <tbody>
    @if (!Model.Any())
    {
        <tr>
            <td colspan="4" class="text-center text-muted py-4">No equipment found.</td>
        </tr>
    }
    else
    {
        @foreach (var e in Model)
        {
            var rowClass = e.IsAvailable ? "row-available" : "row-unavailable";
            <tr class="@rowClass">
                <td>@e.Id</td>
                <td>@e.Type</td>
                <td>@e.Description</td>
                <td class="text-center">
                    <span class="badge @(e.IsAvailable ? "bg-success" : "bg-secondary")">
                        @(e.IsAvailable ? "Available" : "Unavailable")
                    </span>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
